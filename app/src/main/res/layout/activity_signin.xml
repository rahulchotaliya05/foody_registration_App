<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color"
    android:orientation="vertical"
    tools:context=".signin_activity">

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="382dp"
        android:layout_height="58dp"
        android:layout_margin="15dp"
        android:background="#3C3636"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textColorHint="#EDECEC"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="382dp"
        android:layout_height="58dp"
        android:layout_margin="15dp"
        android:background="#3C3636"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#F4EFEF"
        android:textColorHint="#ECE3E3"
        android:textColorLink="#FBF8F8"
        android:textSize="24sp" />

    <Button
        android:id="@+id/register_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#71BA74"
        android:text="Done"
        android:textColor="#EFEBEB"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't Have an Account?Create it" />


</LinearLayout>